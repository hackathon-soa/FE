<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Soa" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/gray_0</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.Soa" parent="Base.Theme.Soa" />

    <!--bottom Navigation transparent 뒤에 동그라미를 없앤다-->
    <style name="BottomNav_NoIndicator" parent="">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Bottom Navi -->
    <style name="Theme.Navi.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>
</resources>