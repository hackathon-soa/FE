<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/layout_identify"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="379dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageView
            android:id="@+id/imv_picture_identify"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_square_gray_14"/>

        <TextView
            android:id="@+id/tv_picturetext_identify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_file_upload"
            android:textColor="@color/gray_200"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="20sp"
            android:layout_gravity="center"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_takepicure_identify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/view_divide_identify"
        app:layout_constraintTop_toTopOf="@id/view_divide_identify"
        app:layout_constraintBottom_toBottomOf="@id/view_divide_identify"
        >

        <ImageView
            android:id="@+id/ic_signup_camera"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:src="@drawable/ic_camera"
            />
        <TextView
            android:id="@+id/txt_signup_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_camera"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_getgallery_identify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_divide_identify"
        app:layout_constraintTop_toTopOf="@id/view_divide_identify"
        app:layout_constraintBottom_toBottomOf="@id/view_divide_identify"
        >

        <ImageView
            android:id="@+id/ic_signup_gallery"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:src="@drawable/ic_gallery"
            />

        <TextView
            android:id="@+id/txt_signup_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_gallery"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

    </LinearLayout>

    
    <View
        android:id="@+id/view_divide_identify"
        android:layout_width="2dp"
        android:layout_height="34.5sp"
        android:background="#C9C9C9"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/layout_identify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>