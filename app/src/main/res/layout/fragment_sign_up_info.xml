<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".SignUpInfoFragment">

    <!-- TODO: Update blank fragment layout -->

    
    <ImageButton
        android:id="@+id/btn_back_signup_info"
        android:layout_width="18dp"
        android:layout_height="29dp"
        android:src="@drawable/ic_arrow_back"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <TextView
        android:id="@+id/tv_title_signupInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_back_signup_info"
        app:layout_constraintBottom_toBottomOf="@id/btn_back_signup_info"/>
    
    <View
        android:id="@+id/view_divide_signupInfo"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_200"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_signupInfo"
        />

    <TextView
        android:id="@+id/tv_input_signupInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01 기본정보입력"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintStart_toStartOf="@id/btn_back_signup_info"
        app:layout_constraintTop_toBottomOf="@id/view_divide_signupInfo"/>

    <TextView
        android:id="@+id/tv_nametext_signupInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성함"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintStart_toStartOf="@id/tv_input_signupInfo"
        app:layout_constraintTop_toBottomOf="@id/tv_input_signupInfo"/>

    <EditText
        android:id="@+id/et_name_signupInfo"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_square_white_gray_16"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginTop="5dp"
        android:hint="아이디를 입력하세요"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_400"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_idtext_login"/>



</androidx.constraintlayout.widget.ConstraintLayout>