<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="119dp"
    android:layout_height="match_parent"
    android:layout_marginEnd="8dp"
    android:background="@drawable/bg_home_stroke"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_home_story"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_demo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/Rounded14dpImage" />

    <ImageView
        android:id="@+id/iv_home_story_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="9dp"
        android:src="@drawable/ic_story_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_home_story_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nickname"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_regular"
        android:includeFontPadding="false"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/iv_home_story_user"
        app:layout_constraintTop_toTopOf="@+id/iv_home_story_user"
        app:layout_constraintBottom_toBottomOf="@+id/iv_home_story_user" />


</androidx.constraintlayout.widget.ConstraintLayout>