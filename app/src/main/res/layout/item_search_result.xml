<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_course_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3박 4일 대구 일정"
        android:textSize="20sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black_color"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/layout_course_info_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_home_stroke"
        android:layout_marginTop="8dp"
        android:paddingBottom="18dp"
        app:layout_constraintTop_toBottomOf="@id/tv_course_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="19dp"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_course_location"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여행지"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginStart="8dp"/>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="2dp"
                android:background="@drawable/line_secondary"
                app:layout_constraintTop_toBottomOf="@id/rv_travel_story"/>

            <TextView
                android:id="@+id/tv_course_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여행지"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_semibold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="19dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_course_location"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여행 일정"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginStart="8dp"/>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="2dp"
                android:background="@drawable/line_secondary"
                app:layout_constraintTop_toBottomOf="@id/rv_travel_story"/>

            <TextView
                android:id="@+id/tv_course_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_semibold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="19dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_course_location"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모집성별"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_marginStart="8dp"/>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="2dp"
                android:background="@drawable/line_secondary"
                app:layout_constraintTop_toBottomOf="@id/rv_travel_story"/>

            <TextView
                android:id="@+id/tv_course_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_semibold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="19dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/line_secondary"
            app:layout_constraintTop_toBottomOf="@id/rv_travel_story"/>

        <LinearLayout
            android:id="@+id/layout_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="19dp"
            android:paddingVertical="6dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_course_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_story_user"/>

            <TextView
                android:id="@+id/tv_course_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="하랑별"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/black_color"/>

            <View
                android:layout_marginHorizontal="12dp"
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:background="@color/gray_100" />

            <TextView
                android:id="@+id/tv_course_disability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="청각장애"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/black_color"
                android:layout_gravity="center_vertical" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_course_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_heart_inactive" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
